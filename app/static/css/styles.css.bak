:root {
  --color-mid: #dcdcdc;
}

h2 {
  font-weight: normal;
  font-size: 48px;
}

body {
  padding: 0px;
  margin: 0px;
  position: absolute;
  inset: 0px;
}

.app-content {
  font-family: 'Neusa';
  font-size: 24px;
  text-transform: uppercase;
  inset: 0px;
  position: absolute;
}

.app-page {
  display: grid;
  grid-template-columns: 80px 1fr;
  height: 100%;
}

.toolbar {
  background: black;
  height: 100%;
}

.status-bar {
  background: black;
  height: 80px;
  border-bottom: 1px solid white;
  border-left: 1px solid white;
}

.icon-bar {
  padding: 0px;
  margin: 0px;
}

.icon-bar__button {
  list-style: none;
  padding: 0px;
  width: 100%;
  border-bottom: 1px solid white;
}

.icon-bar__button img {
  width: 100%;
  height: 100%;
}


.game-card {
  display: block;
  border: 1px solid black;
  padding: 16px;
  cursor: pointer;
  color: black;
  text-decoration: none;
  margin-block-end: 16px;
  &:hover {
    background: rgba(0,0,0, .2);
  }
}

.main-content {
  padding: 16px;
}

.society-card {
  background: var(--color-mid);
  padding: 16px;
}

.button {
  padding: 16px;
  background: black;
  color: white;
  cursor: pointer;
  display: block;

  &:hover {
    background: var(--color-mid);
  }
}

.session-overview {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16px;
}

.session-overview__timeline {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 16px;
}

.session-overview__phase {
  flex: 1 1 auto;
  border-bottom-left-radius: 10px;
  border-top-right-radius: 48px;
  padding: 16px;
  box-sizing: border-box;

  &:first-child {
    background: black;
    color: white;
  }

  * {
    margin: 0px;
  }

  *:first-child {
    font-weight: bold;
  }

  h4 {
    font-weight: normal;
    font-size: 32px;
  }

  h4 + p {
    font-size: 24px;
    font-weight: bold;
  }

  *:last-child {
    font-weight: bold;
    font-size: 48px;
  }
}